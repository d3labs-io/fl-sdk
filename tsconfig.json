{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "src/config",
    "src/config"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "**/*spec.ts"
  ]
}